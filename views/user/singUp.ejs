<div class="containera">
    <div class="card" style="width: 700px;">
      <div class="card_title">
        <h1>Create Account</h1>
        <span>Already have an account? <a href="/login">Login</a></span>
        <% if(status && message) {%>
          <h3 class="text text-danger"><%= message; %></h3>
        <% } %>
      </div>
      <form action="/singUp" method="post">
        <div class="row" >
          <div class="col-12">
            <div class="row">
              <div class="col-6">
                <label>First Name</label><br>
                <input type="text" name="fname" placeholder="First Name" class="form-control" >
                <label>Contact</label><br>
                <input type="number" name="contact" placeholder="Contact" class="form-control" >
                <label>Address</label><br>
                <input type="text" name="address" placeholder="address" class="form-control" >
                <label>lendMark</label><br>s
                <input type="text" name="lendMark" placeholder="lendMark" class="form-control" >
                <label>Password</label><br>
                <input type="number" name="password" placeholder="Enter your password" class="form-control" >
              </div>
              <div class="col-6">
                <label>Last Name</label><br>
                <input type="text" name="lname" placeholder="Last Name" class="form-control" >
                <label>Email</label><br>
                <input type="email" name="email" placeholder="Email" class="form-control" >
                <label>Pincode</label><br>
                <input type="number" name="pincode" placeholder="Pincode" class="form-control" >
                <label>City</label><br>
                <select name="city" class="form-control">
                  <option value="">Select Your City</option>
                  <option value="Indore">Indore</option>
                  <option value="Bhopal">Bhopal</option>
                  <option value="Jaipur">Jaipur</option>
                  <option value="Dewas">Dewas</option>
                </select>
                <label>Conform Password</label><br>
                <input type="password"  placeholder="Conform Password" class="form-control" >
              </div>
            </div>
          </div>
          <div class="form mt-2">
            <button type="submit" class="btn btn-primery"  >Submit</button>
          </div>
        </div>
      </form>
           <div class="card_terms">
          <input type="checkbox" name="" id="terms"> <span>I have read and agree to the <a href="">Terms of Service</a></span>
      </div>
    </div>
  </div>
