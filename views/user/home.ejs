<div class="container">
    <div class="row">
        <% for(let i=0; i < product.length; i++) { var img=product[i].Images.split(','); %>
            <div class="col-3 mt-2 ">
                <div class="card ">
                    <div class="card-header">
                        <h3>
                            <%= product[i].title; %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <img src="/product_Images/<%= img[0]; %>" style="height:200px;width:270px" />
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6">
                                <span>Price : $<%= product[i].price; %>/-</span>
                            </div>
                            <div class="col-6 text text-end">
                                <a href="javascript:void(0);" class="btn btn-primary" onclick="addToCart(`<%= product[i].id; %>`);">Add To
                                    Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.js"></script>
<script>
    function addToCart(productId) {
        console.log("addToCart", productId);
        $.ajax({
            url: "/product/add-to-cart",
            method: "POST",
            data: { proId: productId },
            success: function (result) {
                console.log("success :: result", result);
            },
            error: function () {
                console.log("ERROR: Add TO cart:: ", error);
            }
        });
    }
</script>