<div style="margin-top: 150px;"> 
    <div class="row  " >
        <div class="col-8  offset-3 " >

          
            <div class="row">
                <% for(i = 0; i < products.length; i++){ %>
                <form action="/admin/updateProduct?productId=<%= products[i].id%>" method="post" enctype="multipart/form-data" >
                    
                    <div class="modal-body">
                        <div class="row">
                            <div>
                                <h1>Edit Product</h1>
                                <% if(status && message) {%>
                                    <h3 class="text text-danger">
                                        <%= message; %>
                                    </h3>
                                    <% } %>
                            </div>
                            <div class="col-12">
                                <label>Title</label>
                                <input type="hidden" name="hdnUserID"  value="<%= products[i].id; %>">
                                <input type="text" name="title" id="title" class="form-control" value="<%= products[i].title; %>" />
                            </div>
                            <div class="col-12 mt-2">
                                <label>Description</label>
                                <textarea name="description" class="form-control"><%= products[i].description; %></textarea>
                            </div>
                            <div class="col-6 mt-2">
                                <label>Price</label>
                                <input type="number" name="price" id="price" class="form-control" value="<%= products[i].price; %>"/>
                            </div>
                            <div class="col-6 mt-2">
                                <label>Quantity</label>
                                <input type="number" name="quantity" id="quantity" class="form-control" value="<%= products[i].quantity; %>" />
                            </div>
                            <div class="col-12 mt-2">
                                <div class="input-group mb-3">
                                    <div class="col-12 mt-2">
                                        <label>Images</label>
                                        <input type="file" name="productImages" multiple="multiple" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                   
                </form>
                <% } %>
            </div>
        </div>
    </div>
</div>