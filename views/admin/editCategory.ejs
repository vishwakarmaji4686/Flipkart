<div class="container" style="margin-top: 100px;">
    <form action="/admin/UpdateCategory?catgoryId=<%= category.id;%>" method="post">
        <div class="container-fluid">
            <% if(status && message) {%>
                <h3 class="text text-danger">
                    <%= message; %>
                </h3>
                <% } %>
                    <div>
                        <label>Taitle</label><br>
                        <input type="hidden" name="hdnUserID" value="<%= category.id; %>">
                        <input type="text" name="title" placeholder="plsase Enter your Title" class="form-control"
                            value="<%= category.title; %>"><br>
                        <label>Description</label>
                        <input type="text" name="description" placeholder="plsase Enter your Title" class="form-control"
                            value="<%= category.description;  %>"><br>
                        <label>Category</label>
                        <select name="categoryId" class="form-control">
                            <option value="0">Select Product Category</option>
                            <% for(let j=0; j < allcategory.length; j++) { let singleCat=allcategory[j]; %>
                                <option <%=(singleCat && singleCat.id==category.parentId) ? "selected='selected'" : ''
                                    %> value="<%= singleCat.id; %>" > <%= singleCat.title; %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary"><a href="/admin/allCategory">Close</a></button>
                    </div>
        </div>
    </form>
</div>